<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_marginVertical="10dp"
    android:background="@drawable/sh_gradient_background">
    <TextView
        android:id="@+id/rv_popup_update_training_times_time_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="T E M P S  1"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorSecondaryLight"
        android:gravity="center"
        android:textSize="@dimen/h4_textsize" />

    <EditText
        android:id="@+id/rv_popup_update_training_times_time_edit_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="00:00.00"
        android:inputType="number"
        android:digits="0123456789"
        android:textSize="@dimen/h4_textsize"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:background="@color/transparent"
        android:gravity="center" />

</LinearLayout>