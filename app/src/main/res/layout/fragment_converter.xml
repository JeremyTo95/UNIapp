<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">
    <TextView
        android:id="@+id/fragment_statistiques_statistique_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="?attr/secondaryColor"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/h1_textsize"
        android:text="@string/converter_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/content"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/fragment_statistiques_statistique_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/activity_converter_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:background="@drawable/sh_gradient_background">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/converter_zone_title"
                        android:textColor="?attr/secondaryColor"
                        android:textSize="@dimen/h3_textsize"
                        app:layout_constraintEnd_toStartOf="@+id/activity_converter_zone_selected"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Spinner
                        android:id="@+id/activity_converter_zone_selected"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        app:backgroundTint="?attr/textColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="0dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/converter_time_reference_title"
                    android:fontFamily="sans-serif-light"
                    android:textSize="@dimen/h3_textsize"
                    android:textColor="?attr/secondaryColor" />
                <EditText
                    android:id="@+id/activity_converter_input_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingVertical="20dp"
                    android:tag="inputTime"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="8"
                    android:background="?attr/transparent"
                    android:textSize="@dimen/h1_textsize"
                    android:hint="@string/hint_time"
                    android:autofillHints="0"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/hintColor"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/activity_converter_convert_btn"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="@string/converter_btn_title"
                    android:tag="converterButton"
                    android:background="@drawable/sh_button"
                    android:textColor="?attr/textButtonColor"
                    android:textSize="@dimen/h3_textsize"
                    android:fontFamily="sans-serif-light" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/activity_converter_output_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:visibility="invisible"
                    android:textSize="@dimen/h1_textsize"
                    android:fontFamily="sans-serif-light"
                    android:textColor="?attr/secondaryColor" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>