<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="175dp"
    android:layout_height="50dp"
    android:layout_marginHorizontal="25dp">

    <TextView
        android:id="@+id/rv_training_detail_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="t1 : "
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/h4_textsize"/>

    <TextView
        android:id="@+id/rv_training_detail_time_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="00:00.00"
        android:textColor="?attr/textColor"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="8"
        android:textSize="@dimen/h4_textsize"
        android:gravity="center"
        android:background="?attr/transparent"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="sans-serif-light" />

    <TextView
        android:id="@+id/rv_training_detail_time_diff_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="(+00.00)"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/h4_textsize"
        android:gravity="center"
        android:fontFamily="sans-serif-light" />
</LinearLayout>