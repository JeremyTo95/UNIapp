<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_converter_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".controllers.activities.ConverterActivity">

    <TextView
        android:id="@+id/fragment_statistiques_statistique_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/colorSecondaryLight"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/h1_textsize"
        android:text="C O N V E R T I S S E U R" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Z O N E"
                android:textSize="@dimen/h2_textsize"
                android:textColor="@color/colorSecondaryLight"
                android:fontFamily="sans-serif-light" />
            <Spinner
                android:id="@+id/activity_converter_zone_selected"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:backgroundTint="@color/colorText" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="T E M P S   D E   R E F E R E N C E"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/h2_textsize"
            android:textColor="@color/colorSecondaryLight" />
        <EditText
            android:id="@+id/activity_converter_input_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:tag="inputTime"
            android:inputType="number"
            android:digits="0123456789"
            android:background="@color/transparent"
            android:textSize="@dimen/h1_textsize"
            android:hint="00:00.00"
            android:textColor="@color/colorText"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <Button
                android:id="@+id/activity_converter_convert_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="C o n v e r t i r"
                android:tag="converterButton"
                android:background="@drawable/sh_button"
                android:textColor="@color/colorText"
                android:textSize="@dimen/h3_textsize"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_converter_output_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="00:00.00"
                android:visibility="invisible"
                android:textSize="@dimen/h1_textsize"
                android:textColor="@color/colorSecondaryLight" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>