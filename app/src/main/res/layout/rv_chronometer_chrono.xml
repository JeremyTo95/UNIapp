<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/sh_gradient_background">
    <TextView
        android:id="@+id/laptv_chrono"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:text=""
        android:textColor="?attr/secondaryColor"
        android:textSize="@dimen/h2_textsize"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="sans-serif-light" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/chrono_chrono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/hint_time"
            android:textSize="@dimen/h2_textsize"
            android:textColor="?attr/textColor"
            android:fontFamily="sans-serif-light"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lap_chrono"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="?attr/secondaryColor"
                android:text="@string/hint_time"
                android:gravity="center"
                android:textSize="@dimen/h3_textsize"
                android:fontFamily="sans-serif-light" />
            <TextView
                android:id="@+id/diff_chrono"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/hint_diff"
                android:textSize="@dimen/h3_textsize"
                android:textColor="?attr/greenDeepColor"
                android:gravity="center"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>