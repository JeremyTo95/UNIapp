<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".controllers.fragments.SettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/colorSecondaryLight"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/h1_textsize"
        android:text="P A R A M E T R E S" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/sh_gradient_background"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M O N   P R O F I L"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:textSize="@dimen/h3_textsize"
            android:layout_marginVertical="20dp"
            android:fontFamily="sans-serif-light" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="P E R S O N N E L"
                    android:textColor="@color/colorSecondaryLight"
                    android:textSize="@dimen/h3_textsize"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginVertical="10dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical"
                    android:layout_margin="10dp" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="G E N R E :"
                        android:textSize="@dimen/h4_textsize"
                        android:gravity="center"
                        android:textColor="@color/colorText" />
                    <Spinner
                        android:id="@+id/fragment_settings_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorText"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fragment_settings_lastname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="N O M"
                        android:textSize="@dimen/h4_textsize"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:background="@color/transparent"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fragment_settings_firstname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="P R E N O M"
                        android:textSize="@dimen/h4_textsize"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText"
                        android:background="@color/transparent"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/fragment_settings_weight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="P O I D S (en kg)"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:textSize="@dimen/h4_textsize"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:background="@color/transparent"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/fragment_settings_height"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="T A I L L E (en cm)"
                        android:digits="0123456789"
                        android:textColorHint="@color/colorText"
                        android:inputType="number"
                        android:textSize="@dimen/h4_textsize"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:background="@color/transparent"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/fragment_settings_birth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="N E  L E  DD/MM/YYYY"
                        android:maxLength="10"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorText"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:textSize="@dimen/h4_textsize"
                        android:textColor="@color/colorText"
                        android:background="@color/transparent"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N A T A T I O N"
                    android:textColor="@color/colorSecondaryLight"
                    android:textSize="@dimen/h3_textsize"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginVertical="10dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="S P E C I A L I T E :"
                        android:textSize="@dimen/h4_textsize"
                        android:gravity="center"
                        android:textColor="@color/colorText" />
                    <Spinner
                        android:id="@+id/fragment_settings_spe"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/colorText"
                        android:layout_weight="1" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/fragment_settings_club"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="C L U B"
                        android:inputType="textCapCharacters"
                        android:textColorHint="@color/colorText"
                        android:textSize="@dimen/h4_textsize"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:background="@color/transparent"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/fragment_settings_city"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="V I L L E"
                        android:textSize="@dimen/h4_textsize"
                        android:inputType="textCapCharacters"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText"
                        android:background="@color/transparent"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/fragment_settings_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mettre à jour"
                android:tag="updateBtn"
                android:textColor="@color/colorText"
                android:paddingHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:background="@color/transparent"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <Button
            android:id="@+id/fragment_settings_races"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="importDataRaceBtn"
            android:background="@drawable/sh_button"
            android:text="Importer Temps Compétitions"
            android:textSize="@dimen/h4_textsize"
            android:textColor="@color/colorText"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp" />
        <Button
            android:id="@+id/fragment_settings_save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sh_button"
            android:tag="saveData"
            android:text="Sauver les données"
            android:textSize="@dimen/h4_textsize"
            android:textColor="@color/colorText"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp" />
    </LinearLayout>
</LinearLayout>